<% if flash[:user_error] %>
    <div id="error_explanation">
        <h2>
            Cannot save this emplooye due to <%= pluralize(flash[:user_error].count, "error") %>
        </h2>

        <ul>
        <% flash[:user_error].each do |msg|  %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
<% end %>

<%= form_for @employee do |f| %>

<label>First Name:</label>
<%= f.text_field :first_name %><br><br>

<label>Last Name:</label>
<%= f.text_field :last_name %><br><br>

<label>Picture:</label>
<%= f.text_field :img_url %><br><br>

<label>Alias:</label>
<%= f.text_field :alias %><br><br>

<label>Title:</label>
<%= f.text_field :title %><br><br>

<label>Office:</label>
<%= f.text_field :office %><br><br>

<label>Dog:</label>
<%= f.collection_select :dog_id, Dog.all, :id, :name %><br><br>

<%= f.submit "Save Employee" %>

<% end %>